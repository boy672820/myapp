<!-- header -->
<% include ../partials/header %>

	<!-- top -->
	<% include partials/top %>

	<!-- New body -->
	<form action="/posts/<%= data._id %>?_method=put" method="post">
		<div>
			<label for="title">Title</label>
			<input type="text" name="post[title]" id="title" value="<%= data.title %>">
		</div>
		<div>
			<label for="body">Body</label>
			<textarea name="post[body]" id="body" cols="30" rows="10"><%= data.body %></textarea>
		</div>
		<div>
			<button type="submit">Submit</button>
		</div>
	</form>

	<a href="/posts/<%= data._id %>">Back</a>

<!-- footer -->
<% include ../partials/footer %>
